doctype html
html(lang="ja")
  head
    meta(charset='UTF-8')
    title anyweekly
    meta(content='IE=edge', http-equiv='X-UA-Compatible')
    meta(content='author', name='author')
    meta(content='description', name='description')
    meta(content='keywords', name='keywords')
    meta(content='width=device-width, initial-scale=1' name='viewport')
    meta(content='telephone=no', name='format-detection')
    // build:css styles/vendor.css
    // bower:css
    // endbower
    // endbuild
    link(rel='stylesheet', href='styles/style.css', media='all')
  body
    header.header
      form.header__form
        select#select
          option(value="javascript" selected) JavaScript Weekly
          option(value="css") CSS Weekly
        input#submit(type="submit" value="決定")
    main
      #issue

    script(src="https://www.google.com/jsapi")

    script(type="text/tempalte" id="javascript-template")
      li
        h2
          a(href!="<%= link %>") <%= title %>
        p <%= text %>
        p <%= author %>

    script(type="text/tempalte" id="css-template")
      li
        h2
          a(href!="<%= link %>") <%= title %>
        <% if (img) { %>
        img(src!="<%= img %>" alt="")
        <% } %>
        p <%= text %>

    // build:js scripts/vendor.js
    // bower:js
    // endbower
    // endbuild

    // build:js scripts/main.js
    script(src='scripts/app.js')
    // endbuild
